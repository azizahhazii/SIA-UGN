<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:background="@color/ugn_green"

    android:fitsSystemWindows="true"
    tools:context=".LandingActivity">

    <ImageView
        android:id="@+id/campusBuildingImage"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:scaleType="centerCrop"
        android:src="@drawable/campusbuilding"
        app:layout_constraintHeight_percent="0.5"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <View
        android:id="@+id/overlayView"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@color/ugn_black_overlay"
        app:layout_constraintTop_toTopOf="@id/campusBuildingImage"
        app:layout_constraintBottom_toBottomOf="@id/campusBuildingImage"
        app:layout_constraintStart_toStartOf="@id/campusBuildingImage"
        app:layout_constraintEnd_toEndOf="@id/campusBuildingImage" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/waveGuideline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.31" />

    <ImageView
        android:id="@+id/wave1Image"
        android:layout_width="match_parent"
        android:layout_height="160dp"

        android:scaleType="centerCrop"

        android:src="@drawable/wave1"
        android:alpha="0.9"
        android:elevation="1dp"
        android:layout_marginTop="25dp"
        app:layout_constraintTop_toTopOf="@id/waveGuideline"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <ImageView
        android:id="@+id/wave2Image"
        android:layout_width="match_parent"
        android:layout_height="160dp"

        android:scaleType="centerCrop"

        android:src="@drawable/wave"
        android:elevation="2dp"
        android:layout_marginTop="30dp"
        app:layout_constraintTop_toTopOf="@id/waveGuideline"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <LinearLayout
        android:id="@+id/contentContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        android:paddingHorizontal="30dp"
        android:paddingBottom="40dp"
        android:elevation="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <ImageView
            android:id="@+id/logoImage"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/logo_ugn2"
            android:layout_marginBottom="10dp" />

        <TextView
            android:id="@+id/titleText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="UNIVERSITAS GLOBAL NUSANTARA"
            android:textColor="@color/white"
            android:textSize="12sp"
            android:textStyle="bold"
            android:letterSpacing="0.05"
            android:layout_marginBottom="30dp"
            android:textAlignment="center" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center_horizontal"
            android:layout_marginBottom="20dp"
            android:layout_marginHorizontal="60dp">

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/loginButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Login"

                android:background="@drawable/button_login_solid"   android:textColor="@color/light_bg_gold"                 android:textSize="16sp"
                android:paddingVertical="6dp"
                android:layout_marginBottom="26dp"
                android:elevation="5dp"
                android:gravity="center" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/registerButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Register"

                android:background="@drawable/button_register_solid" android:textColor="@color/black"
                android:textSize="16sp"
                android:paddingVertical="6dp"
                android:elevation="5dp"
                android:gravity="center" />
        </LinearLayout>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>